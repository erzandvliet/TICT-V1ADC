#include <stdio.h>

int main(void)
{
	int i, a, n;
	
	printf("Geef een teken: ");
	a = getchar();
	i = 0;
	
	while (a != '\n') {
		if (a - '0' >= 0 && a - '0' <= 9) {
			i = i * 10 + (a-'0');
		a = getchar();
		}
		else if (a == '-') {
			n = 1;
			a = getchar();
		}
		else {
			printf("incorrecte invoer\n");
			a = getchar();
		};
	};
	if (n == 1) {
		i = i * -1;
	}
	else {}
	printf("het ingevoerde getal is: %d\n", i);
return 0;
}
