//For loop (Opdracht 3, deel 1)
#include <stdio.h>

int main()
{
	int a, x;
	printf("Kies een getal: ");
	scanf("%d", &a);
	x = 1;
	for (x=1; x<=a; x++){
		for (int i=1; i<=x; i++){
			printf("*");
			}
		printf("\n");
	};
	for (x=a; x>=0; x--){
		for (int i=1; i<=x; i++){
			printf("*");
		}
		printf("\n");
	};
}

//While loop (Opdracht 3, deel 2)
#include <stdio.h>

int main()
{
	int a, x;
	printf("Kies een getal: ");
	scanf("%d", &a);
	x = 1;
	
	while (x <= a) {
		int i = 1;
		while (i <= x) {
			printf("*");
			i++;
		}
		printf("\n");
		x++;
	}
	printf("%ch", x);
	while (x > 0) {
		int i = 1;
		while (i >= x) {
			printf("*");
			i--;
		}
		printf("\n");
		x--;
	}
	return 0;
}
