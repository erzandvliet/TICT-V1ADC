#include <stdio.h>
#include <string.h>

int main(int argc, char **argv)
{
	char string[81] = {};
	printf("Geef string: ");
	fgets(string,80,stdin);
	
	int j = strlen(string)-2;
	char a = 0;
	for (int i = 0; i < strlen(string)/2; i++) {
		a = string[i];
		string[i] = string[j];
		string[j] = a;
		j--;
	}
	printf("%s\n", string);

	return 0;
}

// pointer

#include <stdio.h>
#include <string.h>

int main(int argc, char **argv)
{
	char string[81] = {};
	printf("Geef string: ");
	fgets(string,80,stdin);
	
	char *p = string + strlen(string);
	
	for (int i=strlen(string); i>=0; i--) {
		printf("%c", *p);
		p--;
		
	}
	return 0;
}
